# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# Dubai Tennis Tickets - Backend
# =============================================================================
# SAVE THIS FILE TO 1Password / Notion / Secure Storage
# DO NOT commit actual values to git
# =============================================================================

# =============================================================================
# DJANGO CORE
# =============================================================================
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=worthy-clarity-production.up.railway.app,localhost

# =============================================================================
# DATABASE (Railway PostgreSQL)
# =============================================================================
# Automatically provided by Railway when linking PostgreSQL service
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=https://dubaitennistickets.com,https://www.dubaitennistickets.com

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Get from: https://dashboard.stripe.com/webhooks
# Create webhook endpoint: https://worthy-clarity-production.up.railway.app/api/stripe/webhook/
# Events: checkout.session.completed
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# FRONTEND URL (for Stripe redirects)
# =============================================================================
FRONTEND_URL=https://dubaitennistickets.com

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id
TELEGRAM_NOTIFICATIONS_ENABLED=True

# =============================================================================
# EMAIL (for customer confirmations)
# =============================================================================
# Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Dubai Tennis Tickets <noreply@dubaitennistickets.com>
ADMIN_EMAIL=admin@dubaitennistickets.com

# =============================================================================
# DJANGO SUPERUSER (for pre-deploy)
# =============================================================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@dubaitennistickets.com
DJANGO_SUPERUSER_PASSWORD=your-secure-password

# =============================================================================
# API SAFETY FLAGS
# =============================================================================
USE_DJANGO_PRICES=True
USE_DJANGO_AVAILABILITY=True
