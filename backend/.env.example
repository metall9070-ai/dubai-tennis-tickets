# Django Backend Environment Configuration
# Copy this file to .env and fill in the values

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
DATABASE_URL=postgres://user:password@localhost:5432/dubai_tennis_db

# For development, you can use SQLite instead:
# DATABASE_URL=sqlite:///db.sqlite3

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Telegram Bot Notifications
# Get token from @BotFather in Telegram
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
# Get chat_id by messaging your bot and visiting:
# https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_NOTIFICATIONS_ENABLED=True
